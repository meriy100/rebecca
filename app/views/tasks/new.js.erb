$("#new-task").html("<%= j(render "new_task_form", task: @task) %>")
$(".task-new-form-cancel").on("click", function(){
  $("#new-task").html("")
})
$(function(){
  $('.datepicker').datetimepicker({
    format : "YYYY/MM/DD",
    icons: {
      previous: "fa fa-arrow-left",
      next: "fa fa-arrow-right"
    }
  });
  $('.datetimepicker').datetimepicker({
    format : "YYYY/MM/DD HH:mm",
    icons: {
      time: "fa fa-clock-o",
      date: "fa fa-calendar",
      up: "fa fa-arrow-up",
      down: "fa fa-arrow-down",
      previous: "fa fa-arrow-left",
      next: "fa fa-arrow-right"
    }
  });
});
$(".slider").slider({
    ticks: [1,2,3],
    ticks_labels: ['Low', 'Normal', 'ASAP'],
    tooltip: "hide",
    value: 2
});
$("html,body").animate({scrollTop:$('#new-task').offset().top});
$("#title-input").focus();
