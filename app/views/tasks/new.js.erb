$(".task-new-form-cancel").on("click", function(){
  $("#new-task").html("")
})
$(function(){
  $('.datepicker').datetimepicker({
    inline: true,
    format : "YYYY/MM/DD",
    icons: {
      previous: "fa fa-arrow-left",
      next: "fa fa-arrow-right"
    },
    minDate: moment()
  });
  $('#task_deadline_at').val($('.datepicker').data("DateTimePicker").date());
});

