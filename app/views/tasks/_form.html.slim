= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      h2
        = pluralize(@task.errors.count, "error")
        |  prohibited this task from being saved:
      ul
        - @task.errors.full_messages.each do |message|
          li
            = message

  .field
    = f.hidden_field :user_id
  .field
    = f.label :name
    br
    = f.text_field :name
  .field
    = f.label :deadline_at
    br
    = f.datetime_select :deadline_at
  .actions
    = f.submit
